@using Vidly.Models
@model Vidly.Models.Customer
@{
    ViewBag.Title = "test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.Birthday.HasValue)
    {
        <li>Birthday: @Model.Birthday.Value.ToShortDateString().ToString()</li>
    }
</ul>



